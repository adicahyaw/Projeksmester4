<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="13dp"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sewain"
            android:textSize="24sp"
            android:textColor="#5E5E5E"/>
            <!--#5E5E5E"-->

        <View
            android:layout_width="26dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg">


        </View>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#5E5E5E"
        android:text="Pesan - Ambil Kunci - Gassss"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/bg">


    </View>

    <android.support.v7.widget.CardView
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="262dp">


    ``<ViewFlipper
        android:id="@+id/v_flipper"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:background="@color/colorText" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="63dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/bg"
            android:orientation="vertical"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Selamat Pagi"
                    android:textColor="#ffff"
                    android:textSize="15sp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:text="Adi Cahya Wiratmaya"
                android:textColor="#ffff"
                android:textSize="11sp" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="2dp"
        android:textColor="#5E5E5E"
        android:fontFamily="sans-serif"
        android:text="Apa yg Ingin Anda Lakukan?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/mobilpinjam"
            android:layout_width="160dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_weight="1"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobil"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#5E5E5E"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/mobil"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/pinjam"
            android:layout_width="160dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pinjam"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#5E5E5E"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/uang"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/supir"
            android:layout_width="160dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_weight="1"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supir"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#5E5E5E"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/supir"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/riwayat"
            android:layout_width="160dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Riwayat Pesan"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#5E5E5E"
                    />

                <ImageView
                    android:layout_width="176dp"
                    android:layout_height="69dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/riwayat"/>





                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg"
        app:menu="@menu/bottom_navigation" />
    <!--android:backgroundTint="@color/cardview_shadow_start_color"-->
</LinearLayout>